  <div class="row collapse">
    <div class="small-8 large-7 columns">
  <h1>Listing educations</h1>
  </div>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.address %></td>
        <td><%= link_to 'visit the site', education.site %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New education', new_education_path,class: "medium success button" %>
<div class="large-4 medium-4 columns">
  <p>You may require to refresh the page for the map to update.</p>
</div>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>
