    <%= form_tag search_path, :method => 'get' do %>
    
     <div class="row collapse">
  <div class="small-8 large-7 columns">
  <%= text_field_tag :search, params[:search], type: "text",placeholder: "Search"%>
  </div>

  <div class="small-3 large-3 end columns">
